@import 'normalize'
@import 'helper'

/* variables */
$linkColor = #555
$grey = #eee
$black = #222
$white = #f7f7f7

html
button
input
select
textarea
  color: $black

a
a:visited
  color: $linkColor
  text-decoration: none

a:hover
  color: lighten($linkColor, 10%)

body
  color: $black
  font-size: 1em
  line-height: 1.5

.content
  padding-top 100px

.group:after
  content: "";
  display: table;
  clear: both;

.account-overview
  max-width: 1200px
  margin: 0 auto

.project-container
  max-width: 1230px
  margin: 0 auto

.preview-container
  max-width: 1260px
  margin: 0 auto

.list-container
  max-width: 1280px
  margin: 0 auto
.hover a
  color #616161
.hover a:hover
  background #F5F5F5

//Styles for File Input//

.mdl-button--file {
  input {
    cursor: pointer;
    height: 100%;
    right: 0;
    opacity: 0;
    position: relative;
    top: 0;
    width: 300px;
    z-index: 4;
  }
}

.mdl-textfield--file {
  .mdl-textfield__input {
    box-sizing: border-box;
    width: calc(100% - 32px);
  }
  .mdl-button--file {
    right: 0;
  }
}

//Styles for progress bar//

.loader {
  width: 80%
  marginTop: 10px
  margin: 0 auto
}